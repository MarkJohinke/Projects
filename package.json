{
  "name": "codex-playground",
  "version": "1.0.0",
  "description": "Starter project for Codex CLI",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "self-test": "node src/index.js self-test",
    "test": "node tests/run-tests.js",
    "test:e2e": "RUN_E2E=1 node tests/feature/mcp/e2e-admin.test.js",
    "test:e2e:dsm": "DSM_E2E=1 node tests/feature/mcp/e2e-dsm.test.js",
    "log:append": "node src/index.js log",
    "log:read": "node src/index.js log-read",
    "log:summary": "node src/index.js log-summary",
    "log:tokens": "node src/index.js log-tokens",
    "mcp:health": "node src/index.js mcp-health",
    "mcp:health:ds423": "node src/index.js mcp-health --url http://johinke-developments.zebra-mooneye.ts.net:8765",
    "preflight": "pwsh ./scripts/preflight.ps1",
    "dev:compose": "docker compose -f docker-compose.dev.yml up --build",
    "audit:tail": "node scripts/tail-audit.js --lines 50 --follow",
    "yoga:uname": "curl --% -s -X POST http://localhost:8765/tools/exec -H \"Content-Type: application/json\" -d \"{\\\"target\\\":\\\"yoga\\\",\\\"command\\\":\\\"uname -a\\\"}\"",
    "yoga:storage": "curl --% -s -X POST http://localhost:8765/admin/storage-summary -H \"Content-Type: application/json\" -d \"{\\\"target\\\":\\\"yoga\\\"}\"",
    "http:read": "node scripts/http-read.js",
    "admin:storage": "node scripts/admin-storage.js",
    "dsm:list": "node scripts/dsm-list.js",
    "dsm:mkdir": "node scripts/dsm-mkdir.js",
    "dsm:move": "node scripts/dsm-move.js",
    "dsm:delete": "node scripts/dsm-delete.js",
    "admin:tail": "node scripts/admin-tail.js",
    "ws:read": "node scripts/ws-read.js",
    "ws:exec": "node scripts/ws-exec.js",
    "ws:tools": "node scripts/ws-tools.js",
    "admin:docker": "node scripts/admin-docker.js",
    "http:write": "node scripts/http-write.js",
    "http:delete": "node scripts/http-delete.js",
    "local:read": "node scripts/local-read.js",
    "local:write": "node scripts/local-write.js",
    "local:delete": "node scripts/local-delete.js",
    "report:full": "node scripts/full-report.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "ssh2": "^1.15.0",
    "ws": "^8.18.0"
  }
}